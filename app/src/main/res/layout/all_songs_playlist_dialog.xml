<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:layout_margin="2dp"
    android:elevation="4dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="15dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/playlist_all_songs_name_TV"
                android:layout_width="wrap_content"
                android:text="@string/song_name"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/playlist_all_songs_artist_TV"
                android:layout_width="wrap_content"
                android:text="@string/enter_name_of_the_artist_or_band"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/playlist_all_songs_current_user"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/playlist_all_songs_youtube_link_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/playlist_all_songs_add_IV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/ic_add"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>