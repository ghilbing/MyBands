<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_message_profile_CIV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile"/>

    <TextView
        android:id="@+id/item_message_receiver_TV"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:background="@drawable/receiver_message_background"
        android:text="@string/gretel_hilbing"
        android:layout_toEndOf="@+id/item_message_profile_CIV"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/item_message_sender_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sender_message_background"
        android:text="@string/gretel_hilbing"
        android:layout_alignParentTop="@+id/item_message_receiver_TV"
        android:layout_marginTop="2dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="10dp"/>



</RelativeLayout>